function testInitFromUpload() {
  // get our class-level constants so we can get initial states
  MealImage._initialize();
  
	var originalSortOrder = MealImage.getSortOrder();
	
	for (var dataIndex in testData.goodFileUploads) {
		fileData = testData.goodFileUploads[dataIndex];
		
		// init from file upload
    protoOutcome = new MealImage();
    outcome = protoOutcome.initFromUpload(fileData);
    
    // make sure the same MealImage is returned
    assertEquals("A different mealImage was returned from initFromUpload than from new MealImage()!", protoOutcome.localID, outcome.localID);
    
    // we know that new MealImage() works, so we just test initFromUpload

    // make sure it has an object
    assertEquals("MealImage init'd from upload does not have its file object!", outcome.fileObject, fileData);

    // make sure we can find it by its object
    assertEquals("MealImage init'd from upload could not be found by its fileObject!", outcome, MealImage.findByFileObject(fileData));

		// make sure the filename is saved
		assertEquals("MealImage init'd from upload does not have filename!", outcome.filename, fileData.name);
		
		// make sure it's queued
		assertIsQueued(outcome);
		
		// make sure it has Jaml content
		// in this case, just check for the presence of a filename
		assertEvaluatesToTrue("MealImage node after initFromUpload doesn't have Jaml content (e.g. filename)!", outcome.node.html().match(new RegExp(outcome.filename)));

		// make sure we have uploading class
		assertTrue("MealImage node after initFromUpload doesn't have uploading class!", outcome.node.hasClass("uploading"));

  	// make sure the meal images node is dirty
  	// do it in the loop so that we can know as soon as the first one is done, rather than cumulatively
  	assertTrue("Init from upload did not dirty the meal images field!", Mealstrom.PageManager.isFieldDirty(MealImage._mealImagesNode));
	}
		
	// make sure there are no changes to the sort order
	assertEquals("Sort order changed after initFromUpload, even though it shouldn't have!", originalSortOrder, MealImage.getSortOrder());
}

