function testMealImageShutdown() {
  // make sure shutdown works properly, otherwise all our tests are iffy
  MealImage._initialize(); // already tested
  MealImage._shutdown(); // to test

  assertUndefined("MealImage shutdown did not remove _initialized!", MealImage._initialized);
  assertUndefined("MealImage shutdown did not remove debug!", MealImage.prototype.debug);
  assertUndefined("MealImage shutdown did not remove _images!", MealImage._imagesForMeal);
  assertUndefined("MealImage shutdown did not remove image sort order node!", MealImage._imageSortOrderNode);
  assertUndefined("MealImage shutdown did not remove key image node!", MealImage._keyImageDataNode);
  assertUndefined("MealImage shutdown did not remove _keyPic!", MealImage._keyPic);
  assertUndefined("MealImage shutdown did not remove _mealImagesNode!", MealImage._mealImagesNode);
	assertUndefined("MealImage shutdown did not remove clearedObject to an empty hash!", MealImage.clearedObject);
  
	for (var templateName in MealImage.internals._JAML_TEMPLATES) {
		if (MealImage.internals._JAML_TEMPLATES.hasOwnProperty(templatesName)) {
		  assertUndefined("MealImage shutdown did not remove Jaml templates!", Jaml.templates[templateName]);
	  }
	}
}

