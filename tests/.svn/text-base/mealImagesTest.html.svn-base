/* IS MEAL IMAGE */

function testIsMealImage() {
	assertFalse("isMealImage returned true for undefined!", MealImage.isMealImage());
	assertFalse("isMealImage returned true for null!", MealImage.isMealImage(null));
	assertFalse("isMealImage returned true for string!", MealImage.isMealImage("abc"));
	assertFalse("isMealImage returned true for number!", MealImage.isMealImage(2));
	assertFalse("isMealImage returned true for random array!", MealImage.isMealImage([1, 2]));
	assertFalse("isMealImage returned true for random hash!", MealImage.isMealImage({a: 2, b: 3}));
	
	// now test a real MealImage
	var mi = new MealImage();
	assertTrue("Real MealImage didn't pass isMealImage!", MealImage.isMealImage(mi));
	
	// now test something fake like a MaelImage
	var fakeMI = new Array();
	assertFalse("isMealImage returned true for empty hash!", MealImage.isMealImage(fakeMI));
	fakeMI.localID = mi.localID;
	assertFalse("isMealImage returned true for fake MI with real MI's localID!", MealImage.isMealImage(fakeMI));
	
	// now break the MealImage and make sure it doesn't work
	delete mi.localID;
	assertFalse("isMealImage returned true for broken MI with no localID!", MealImage.isMealImage(mi));
}

